#!/usr/bin/env php
<?php declare(strict_types=1);

use BackEndTea\Architect\Infrastructure\Console\Application;

(function () {
    foreach ([__DIR__ . '/../../../autoload.php', __DIR__ . '/../vendor/autoload.php'] as $file) {
        if (file_exists($file)) {
            require $file;
            break;
        }
    }

    $app = new Application();
    $app->setDefaultCommand('run');
    $app->run();
})();